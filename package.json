  "description": "Simple quotes fullstack app",
  "scripts": {
    "start:backend": "npx nx start:dev @quotes/backend",
    "build:backend": "npx nx build @quotes/backend",
    "test:backend": "npx nx test @quotes/backend",
    "serve:backend": "npx nx start:prod @quotes/backend",
